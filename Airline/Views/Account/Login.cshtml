@model Airline.Models.tblUserAccount

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
                <div class="panel-body">
                   
                        <div class="form-group"> 
                            <label for="exampleInputEmail1">Username</label>
                            
                            @Html.EditorFor(model => model.UserName, null,new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password </label>
                            @Html.EditorFor(model => model.Password, null,new {@class="form-control" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <button type="submit" class="btn btn-sm btn-default">Sign in</button>
                     
                </div>
            </div>
        </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}